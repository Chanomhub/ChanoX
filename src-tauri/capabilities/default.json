{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "core:default",
    "shell:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "notification:allow-is-permission-granted",
    "notification:default",
    "fs:allow-write-file",
    "fs:allow-read-file",
    {
      "identifier": "fs:scope",
      "allow": ["**", "$DOWNLOADS/**"]
    }

  ]
}