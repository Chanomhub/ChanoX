{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chanomhub",
  "version": "0.6.0",
  "identifier": "com.chanomhub.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ChanomHub",
        "width": 800,
        "height": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "http": {
      "scope": ["**"]
    },
    "fs": {
      "requireLiteralLeadingDot": true
    }
  },
  "bundle": {
    "externalBin": [
      "binaries/Release/ConsoleApp2.exe"
    ],
    "resources": [
      "plugins/**/*",
      "downloads",
      "binaries/**/*",
      "binaries/Release/ConsoleApp2.exe.config",
      "binaries/Release/Microsoft.Web.WebView2.Core.dll",
      "binaries/Release/Microsoft.Web.WebView2.WinForms.dll",
      "binaries/Release/Newtonsoft.Json.dll"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}