{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chanomhub",
  "version": "0.9.5",
  "identifier": "com.chanomhub.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "ChanomHub",
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://raw.githubusercontent.com/Chanomhub/Chanomhub-Desktop/main/latest.json"
      ],
      "pubkey": "THE_PUBLIC_KEY_GENERATED_BY_UPDATER"
    },
    "http": {
      "scope": ["**"]
    },
    "fs": {
      "requireLiteralLeadingDot": true
    }
  },
  "bundle": {
    "resources": [
      "plugins/**/*",
      "binaries/**/*"
    ],
    "active": true,
    "targets": ["deb", "rpm", "appimage", "nsis", "msi", "app", "dmg", "updater"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }

}
